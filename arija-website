    function toggleLanguage() {
      const fr = document.getElementById('fr');
      const en = document.getElementById('en');
      fr.style.display = fr.style.display === 'none' ? 'block' : 'none';
      en.style.display = en.style.display === 'none' ? 'block' : 'none';
